# Gemini API Key (required)
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Origins (comma-separated for multiple origins)
# Example: https://your-frontend.vercel.app,https://custom-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Google Drive Backup (optional)
# Set to true to upload generated images to Google Drive
GOOGLE_DRIVE_UPLOAD_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json

# Cloudinary Storage (optional - recommended for production)
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
